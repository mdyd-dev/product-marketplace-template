{% parse_json object %}
  {
    "id":          {{ object.id | json }},
    "owner":       {{ owner | json }},
    "name":        {{ object.name | json }},
    "cover_photo": {{ object.cover_photo | json }},
    "tags":        {{ object.tags | split: ',' | uniq }},
    "description": {{ object.description | default: "" | json }},
    "type":        {{ object.type | default: "" | json }},
    "category":    {{ object.category | default: "" | json }},
    "price":       {{ object.price | plus: 0 }},
    "uuid":        {{ object.uuid | json }}
  }
{% endparse_json %}

{% liquid
  export object
%}
