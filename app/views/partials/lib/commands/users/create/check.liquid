{% liquid
  assign c = '{ "errors": {}, "valid": true }' | parse_json

  if object.email == blank
    include 'lib/register_error', contract: c, field_name: 'email', key: 'app.errors.blank'
  else
    graphql emails_count = 'users/emails_count', email: object.email | dig: 'users', 'total_entries'
    if emails_count > 0
      include 'lib/register_error', contract: c, field_name: 'email', key: 'app.errors.taken'
    endif
  endif

  if object.password == blank
    include 'lib/register_error', contract: c, field_name: 'password', key: 'app.errors.blank'
  endif

  if object.username == blank
    include 'lib/register_error', contract: c, field_name: 'username', key: 'app.errors.blank'
  endif

  hash_assign object['valid'] = c.valid
  hash_assign object['errors'] = c.errors

  return_rc object
%}
