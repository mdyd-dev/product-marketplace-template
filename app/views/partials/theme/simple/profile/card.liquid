<div class="flex flex-col">
  <div class="mr-10">
    {% liquid
      assign img_url = user.avatar.versions.small
      unless img_url
        assign img_url = 'images/user.svg' | asset_url
      endunless
    %}
    <img src="{{ img_url }}" alt="" class="w-64 h-64 mx-auto rounded-full object-cover object-center shadow-md md:mx-0 text-gray-400">
  </div>

  <div class="mr-10">
    <div class="mb-4">
      <div class="text-3xl font-medium text-grey-darkest">
        {{ user.first_name }} {{ user.last_name }}
      </div>
      <div class="text-xl text-grey-dark font-light">
        {{ user.username }}
      </div>
    </div>
  </div>
</div>
