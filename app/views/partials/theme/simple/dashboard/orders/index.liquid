<h1 class="mb-6 text-3xl font-medium">
  <a href="/dashboard">{{ 'app.dashboard' | t }}</a>
  / {{ 'app.' | append: role | t }}
  / {{ 'app.orders.list' | t }}
  ({{ orders.total_entries  }})
</h1>

{% if orders.total_entries > 0 %}
  <table class="w-full table-auto">
    <thead>
      <tr>
        <th class="px-4 py-2 text-lg font-medium text-left">{{ "app.created_at" | t }}</th>
        <th class="px-4 py-2 text-lg font-medium text-left">{{ "app.item" | t }}</th>
        <th class="px-4 py-2 text-lg font-medium text-left">{{ "app.seller" | t }}</th>
        <th class="px-4 py-2 text-lg font-medium text-left"></th>
        <th class="px-4 py-2 text-lg font-medium text-left">{{ "app.buyer" | t }}</th>
        <th class="px-4 py-2 text-lg font-medium text-left">{{ "app.status" | t }}</th>
        <th class="px-4 py-2 text-lg font-medium text-left">{{ "app.total" | t }}</th>
      </tr>
    </thead>
    <tbody>
      {% for order in orders.results %}
        <tr>
          <td class="px-4 py-2 border-b">{{ order.created_at | l }}</td>
          <td class="px-4 py-2 border-b">
            {% function_rc item_url = 'link_to', item: order.item %}
            <a href="{{ item_url }}">
              {% print order.item.name %}
              <small> {% echo order.item.status.name | default: 'app.item_statuses.none' | t %}</small>
            </a>
          </td>
          <td class="px-4 py-2 border-b">{{ order.seller.email | split: '@' | first }}</td>
          <td class="px-1 py-1 border-b">=></td>
          <td class="px-4 py-2 border-b">{{ order.buyer.email | split: '@' | first }}</td>
          <td class="px-4 py-2 border-b">
            {{ order.status.name | default: 'missing-state-invalid-order' | t }}
            {% if  order.order_status.timestamp %}
            <br/><small>{{ order.order_status.timestamp | to_time | l }}</small>
            {% endif %}
          </td>
          <td class="px-4 py-2 border-b">{{ order.total | pricify_cents }}</td>
          <td class="px-4 py-2 border-b">
            {% include 'theme/simple/dashboard/orders/actions' %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% else %}
  <p class="w-full text-lg font-medium">
    Your orders will appear here once you have any.
  </p>
{% endif %}
