{% liquid
  if group.id
    assign method = 'put'
  else
    assign method = 'post'
  endif
  assign uuid = '' | uuid
  assign group_uuid = object.uuid | default: uuid
%}
<div class="container flex flex-wrap groups-center mx-auto">
  <form action="/dashboard/groups" method="post" class="w-full p-8 bg-gray-200 rounded-lg shadow-md md:w-1/2">
    {% include 'authenticity_token' %}
    <input type="hidden" name="_method" value="{{method}}" />

    {% if object.id %}
    <input type="hidden" name="group[id]" value="{{ object.id }}" />
    {% endif %}
    <input type="hidden" name="group[uuid]" value="{{ group_uuid }}" />

    <div class="my-3">
      <label class="block" for="name">Name</label>
      <input class="w-2/3 form-input" type="text" id="name" name="group[name]" value="{{ object.name }}" autofocus required />
      {% include 'theme/simple/field_error', errors: object.errors.name %}
    </div>

    <div class="my-3">
      <label class="block" for="name">Summary (displayed on list)</label>
      <input class="w-2/3 form-input" type="text" id="summary" name="group[summary]" value="{{ object.summary }}" autofocus required />
      {% include 'theme/simple/field_error', errors: object.errors.name %}
    </div>

    <div class="mt-3">
      <label class="block">Photos</label>
      {% include 'theme/simple/photos/uppy_area' %}
    </div>

    <div class="mt-3">
      <label class="block" for="description">Description</label>
      <textarea class="w-full form-input" type="text" id="description" name="group[description]" rows="3" required>
        {{ object.description }}
      </textarea>

      {% include 'theme/simple/field_error', errors: object.errors.description %}
    </div>

    <button class="mt-8 button">Submit</button>
  </form>

</div>

{% include 'theme/simple/photos/uppy_form', group_uuid: group_uuid, presigned_url: presigned_url, user_id: user.id %}
