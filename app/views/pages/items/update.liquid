---
method: post
---
{% liquid
  include 'lib/must_be_authenticated'

  include 'lib/queries/items/find', id: context.params.item.id

  include 'lib/commands/items/update/build', object: context.params.item
  include 'lib/commands/items/update/check', object: context.exports.object

  if context.exports.object.valid
    include 'lib/commands/items/update/execute', object: context.exports.object

    if context.exports.object.valid
      assign object = context.exports.object

      include 'lib/events/create-event', type: 'item_updated', actor_id: context.current_user.id, object_id: context.exports.object.id

      assign url = '/items/show?id=' | append: object.id
      include 'redirect_to', url: url, notice: 'app.items.updated'
    endif
  else
    include 'lib/queries/categories'
    include 'lib/queries/presigned_url'

    include 'theme/simple/items/edit', item: context.exports.object, icons: context.exports.lib.icons
  endif
%}
