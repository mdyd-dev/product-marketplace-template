---
method: post
---
{% liquid
  include 'lib/must_be_authenticated'

  include 'lib/commands/items/create/build', object: context.params.item, owner: context.current_user.id
  include 'lib/commands/items/create/check', object: context.exports.object

  if context.exports.object.valid
    include 'lib/commands/items/create/execute', object: context.exports.object

    if context.exports.object.valid
      assign object = context.exports.object

      include 'lib/commands/events/create', type: 'item_created', actor_id: context.current_user.id, object_id: context.exports.object.id

      function_rc url = 'link_to', item: object
      include 'redirect_to', url: url, notice: 'app.items.created'
    endif
  else
    function_rc filters = 'lib/data/queries/search/filters', query: context.params
    function_rc presigned_url = 'lib/data/queries/presigned_url'

    include 'theme/simple/items/new', item: context.exports.object, lib: filters, presigned_url: presigned_url
  endif
%}



